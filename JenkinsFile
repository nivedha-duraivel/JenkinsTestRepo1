pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                environment
                {   
                    Foo = 'foo'
                }
                echo 'Hello World'
                echo $Foo
            }
        }
         stage('Build') {
            steps {
                echo 'Building job'
            }
        }
         stage('Test') {
            steps {
                echo 'Testing job'
            }
        }
    }
}
